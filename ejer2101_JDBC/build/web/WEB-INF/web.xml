<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>NServlet</servlet-name>
        <servlet-class>nservlet.NServlet</servlet-class>
    </servlet> 
   <servlet>
        <servlet-name>XMLServlet</servlet-name>
        <servlet-class>nservlet.XMLServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NServlet</servlet-name>
        <url-pattern>/NServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>XMLServlet</servlet-name>
        <url-pattern>/XMLServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
